extends ../../layouts/default.pug

include ../../mixins/filer-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort-category.pug


block main
    +alert-success("3000")
    +alert-error("3000")
   
    h1 Trang quản lý bài hát
    .card.mb-3
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
            .row 
                .col-6
                    +filer-status(filterStatus)
                .col-6 
                    +search(keyword)
    
    .card.mb-3 
        .card-header Sắp xếp sản phẩm
        .card-body
            .row
                .col-4 
                    +sort()

    .card.mb-3
        .card-header
        .card-body 
            .row
                .col-8 
                    +form-change-multi()
                .col-4.text-end
                    a(
                        href=`${prefixAdmin}/songs/create`
                        class='btn btn-outline-success'
                    ) Thêm bài hát mới
    
            table(
                class="table table-hover table-sm"
                checkbox-multi
            )
                thead 
                    tr 
                        th 
                            input(type="checkbox", name="checkall")
                        th STT 
                        th Hình ảnh
                        th Tên bài hát
                        th Tên nghệ sĩ
                        th Chủ đề
                        th Vị trí
                        th Trạng thái
                        th Hành động
                tbody
                     tbody
                            each item, index in songs
                                tr 
                                    td 
                                        input( 
                                            type="checkbox" 
                                            name="id"
                                            value=item.id
                                        )
                                    td #{pagination.limitItems * (pagination.currentPage - 1) + (index + 1)}
                                    td 
                                        img(src= item.avatar, alt= item.title, width = "80px",height = auto)
                                    td.text-truncate(style="max-width: 150px;" title=item.title) #{item.title}
                                    td.text-truncate(style="max-width: 150px;" title=item.infoSinger.fullName) #{item.infoSinger.fullName}
                                    td.text-truncate(style="max-width: 150px;" title=item.infoTopic.title) #{item.infoTopic.title}
                                    td 
                                        input(
                                            type="number"
                                            value=item.position
                                            style="width: 60px"
                                            min="1"
                                            name="position" 
                                        ) 
                                    td
                                        
                                        if(item.status === 'active')
                                            a(
                                                href='javascript:;'
                                                data-status=item.status
                                                data-id=item.id
                                                button-change-status
                                                class='badge badge-success'
                                            ) Hoạt động
                                        else 
                                            a(
                                                href='javascript:;'
                                                data-status=item.status
                                                data-id=item.id
                                                button-change-status
                                                class='badge badge-danger'
                                            ) Ngừng hoạt động
                                    
                                    td 
                                        .d-flex.flex-wrap.gap-1
                                            a(
                                                href=`${prefixAdmin}/products/detail/${item.id}`
                                                class='btn btn-secondary btn-sm'
                                            ) Chi tiết
                                           
                                            a(
                                                href=`${prefixAdmin}/products/edit/${item.id}`
                                                class='btn btn-warning btn-sm ml-1'
                                            ) Sửa
                                        
                                            button(
                                                class='btn btn-danger btn-sm ml-1'
                                                button-delete 
                                                data-id=item.id
                                            ) Xóa
                    
    nav 
        +pagination(pagination)

block script
    script(src="/admin/js/song.js")